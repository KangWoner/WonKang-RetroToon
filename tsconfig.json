{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "types": ["node"]          // (Jest는 빌드에서 제외하므로 node만)
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/**"]
}
